# =============================================================================
# EcoQuant Backend - Environment Variables Template
# Rename this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=EcoQuant
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=4

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=ecoquant
POSTGRES_PASSWORD=ecoquant_secret_2024
POSTGRES_DB=ecoquant_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full Database URL (AsyncPG)
DATABASE_URL=postgresql+asyncpg://ecoquant:ecoquant_secret_2024@localhost:5432/ecoquant_db

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars

# JWT Settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ROUNDS=12

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# External API Keys (Optional)
# -----------------------------------------------------------------------------
ALPHA_VANTAGE_API_KEY=
FMP_API_KEY=
OPENAI_API_KEY=

# Google Gemini API Key (for news sentiment analysis)
# Get free API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Google OAuth Configuration
# -----------------------------------------------------------------------------
# Get credentials at: https://console.cloud.google.com/apis/credentials
# 1. Create a new project (or select existing)
# 2. Enable "Google+ API" and "Google Identity Toolkit API"
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URI: http://localhost:3000/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

